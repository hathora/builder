body {
  margin: 0;
}

h1 {
  margin: 0 0 10px 0;
  font-size: 28px;
}

:focus {
  outline: none;
}

.container {
  display: flex;
}

.forms-container {
  flex: 1;
}

.json-state {
  color: #bfccd6;
  background: #182026;
  flex: 1;
  padding: 20px;
  font-size: 14px;
}

.form {
  padding: 20px;
}

.form:not(:last-child) {
  border-bottom: 1px solid rgba(16, 22, 26, 0.15);
}

.form:nth-child(odd) {
  background: #f5f8fa;
}

.form:nth-child(even) {
  background: #ebf1f5;
}

.form-group {
  display: flex;
}

.vs__dropdown-toggle {
  border-radius: 3px;
}

.stretch-form-input {
  flex: 1;
}

.vue-select {
  box-shadow: inset 0 0 0 1px rgba(16, 22, 26, 0.4), inset 0 -1px 0 rgba(16, 22, 26, 0.2);
  background-color: #f5f8fa;
}

.vue-select .vs__dropdown-toggle {
  border: none;
}

.input {
  width: 100%;
  border: none;
  border-radius: 3px;
  box-shadow: 0 0 0 0 rgba(19, 124, 189, 0), 0 0 0 0 rgba(19, 124, 189, 0), inset 0 0 0 1px rgba(16, 22, 26, 0.15),
    inset 0 1px 1px rgba(16, 22, 26, 0.2);
  font-size: 14px;
  line-height: 30px;
  outline: none;
  padding: 0 10px;
}

.button {
  box-shadow: inset 0 0 0 1px rgba(16, 22, 26, 0.4), inset 0 -1px 0 rgba(16, 22, 26, 0.2);
  background-color: #f5f8fa;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 3px;
  cursor: pointer;
  font-size: 14px;
  min-width: 30px;
  min-height: 30px;
}

.button:hover {
  background-color: #e1e8ed;
}

.button:active {
  background-color: #d8e1e8;
  box-shadow: inset 0 0 0 1px rgba(16, 22, 26, 0.2), inset 0 1px 2px rgba(16, 22, 26, 0.2);
}

.button.small {
  font-size: 12px;
  min-width: 15px;
  min-height: 15px;
  padding: 0;
}

.submit {
  background-color: #137cbd;
  color: #fff;
}

.submit:hover {
  background-color: #106ba3;
}

.submit:active {
  background-color: #0e5a8a;
}

.danger {
  background-color: #db3737;
  color: #fff;
}

.danger:hover {
  background-color: #c23030;
}

.danger:active {
  background-color: #a82a2a;
}

.label {
  display: block;
  margin-top: 10px;
  margin-bottom: 5px;
}

.object-input {
  margin-bottom: 15px;
}

.object-input > div {
  margin-left: 5px;
}

.object-display > div,
.array-display > div {
  margin-left: 25px;
}

.enum-display {
  color: #ff7373;
}

.boolean-display {
  color: #48aff0;
}

.string-display {
  color: #3dcc91;
}

.number-display {
  color: #ad99ff;
}

.kv-display,
.array-display > div {
  margin-top: 2px;
  margin-bottom: 2px;
}

.missing {
  border: 1px solid red;
}

.array-item:not(:last-child) {
  margin-bottom: 10px;
}
