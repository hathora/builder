#root {
  display: flex;
}

.forms {
  flex: 50%;
}

.state {
  flex: 50%;
}

.array-item {
  display: flex;
}

.object-input {
  padding-bottom: 5px;
}

.object-input > div {
  margin-left: 10px;
}

.kv-display {
  padding-bottom: 2px;
}

.object-display > div,
.array-display > div {
  margin-left: 10px;
}

.enum-display {
  color: #ff7373;
}

.boolean-display {
  color: #48aff0;
}

.string-display {
  color: #3dcc91;
}

.number-display {
  color: #ad99ff;
}
