#app {
  display: flex;
  justify-content: space-between;
}

.object-display {
  max-width: 280px;
}

.state-display > div {
  width: 100%;
  max-width: none;
}

.array-item > .plugin-display {
  min-width: 64px;
  max-width: 280px;
}

.array-item > .object-display {
  min-width: 160px;
  max-width: 280px;
}

.kv-display {
  padding-bottom: 2px;
}

.object-display > div {
  margin-left: 8px;
}

.array-display > div {
  margin-left: 12px;
}

.plugin-display {
  max-width: 50%;
}

.enum-display {
  color: #d53d3d;
}

.boolean-display {
  color: #2990d1;
}

.string-display {
  color: #259f6c;
}

.int-display {
  color: #947bf7;
}

.float-display {
  color: #b556c1;
}
