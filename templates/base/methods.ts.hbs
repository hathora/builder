import {
  UserId,
  {{userState}},
  {{#each methods}}
  {{makeRequestName @key}},
  {{/each}}
} from "./types";

export interface Methods<T> {
  {{#each methods}}
  {{#if (eq @key ../initialize)}}
  {{../initialize}}(userId: UserId, request: {{makeRequestName @key}}): T;
  {{else}}
  {{@key}}(state: T, userId: UserId, request: {{makeRequestName @key}}): string | void;
  {{/if}}
  {{/each}}
  getUserState(state: T, userId: UserId): {{userState}};
  {{#if tick}}
  onTick(state: T): void;
  {{/if}}
}
