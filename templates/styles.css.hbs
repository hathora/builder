html {
  box-sizing: border-box;
}

*, :after, :before {
  box-sizing: inherit;
}

body {
  width: 100vw;
  height: 100vh;
  padding: 0;
  margin: 0;
}

h1 {
  margin: 0 0 10px 0;
  font-size: 28px;
}

pre {
  margin: 0;
  padding: 0;
}

:focus {
  outline: none;
}

.container {
  display: flex;
  width: 100vw;
  height: 100vh;
}

.forms-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  border-right: 1px solid rgba(16, 22, 26, 0.15);
  overflow: auto;
}

.json-state {
  color: #bfccd6;
  background: #182026;
  flex: 1;
  padding: 20px;
  overflow: auto;
  font-size: 14px;
}

.form {
  padding: 20px;
}

.form:not(:last-child) {
  border-bottom: 1px solid rgba(16, 22, 26, 0.15);
}

.form:nth-child(odd) {
  background: #f5f8fa;
}

.form:nth-child(even) {
  background: #ebf1f5;
}

.form-group {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  border-radius: 0;
}

.form-group .input-group .input, .form-group .button, .form-group .select select {
  border-radius: inherit;
  z-index: 2;
}

.form-group>:first-child {
  border-radius: 3px 0 0 3px;
  margin-right: 0;
}

.vs__dropdown-toggle {
  border-radius: 3px;
}

.form-group>:first-child .vs__dropdown-toggle {
  border-radius: 3px 0 0 3px;
  margin-right: 0;
}

.form-group>:last-child {
  border-radius: 0 3px 3px 0;
  margin-right: 0;
}

.form-group>:last-child .vs__dropdown-toggle {
  border-radius: 0 3px 3px 0;
  margin-right: 0;
}

.input-group {
  display: block;
  position: relative;
}

.input {
  position: relative;
  width: 100%;
  appearance: none;
  background: #fff;
  border: none;
  border-radius: 3px;
  box-shadow: 0 0 0 0 rgba(19,124,189,0), 0 0 0 0 rgba(19,124,189,0), inset 0 0 0 1px rgba(16,22,26,.15), inset 0 1px 1px rgba(16,22,26,.2);
  color: #182026;
  font-size: 14px;
  font-weight: 400;
  height: 30px;
  line-height: 30px;
  outline: none;
  padding: 0 10px;
  transition: box-shadow .1s cubic-bezier(.4,1,.75,.9);
  vertical-align: middle;
}

.button-text {
  flex: 0 1 auto;
}

.button {
  box-shadow: inset 0 0 0 1px rgba(16, 22, 26, 0.4), inset 0 -1px 0 rgba(16, 22, 26, 0.2);
  background-color: #f5f8fa;
  color: #182026;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 3px;
  cursor: pointer;
  vertical-align: middle;
  text-align: left;
  font-size: 14px;
  min-width: 30px;
  min-height: 30px;
}

.button:hover {
  background-color: #E1E8ED;
}

.button:active {
  background-color: #D8E1E8;
  box-shadow: inset 0 0 0 1px rgba(16,22,26,.2), inset 0 1px 2px rgba(16,22,26,.2)
}

.button.small {
  font-size: 12px;
  min-width: 15px;
  min-height: 15px;
  padding: 0;
  margin: 0;
}

.submit {
  background-color: #137cbd;
  color: #fff;
}

.submit:hover {
  background-color: #106BA3;
}

.submit:active {
  background-color: #0E5A8A;
}

.danger {
  background-color: #db3737;
  color: #fff;
}

.danger:hover {
  background-color: #C23030;
}

.danger:active {
  background-color: #A82A2A;
}

.select {
  display: block;
  letter-spacing: normal;
  position: relative;
  vertical-align: middle;
}

.select:after {
    font-family: Icons16,sans-serif;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 1;
  content: "î›†";
  color: #5c7080;
  pointer-events: none;
  position: absolute;
  right: 7px;
  top: 7px;
}

.select select {
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  border: none;
  cursor: pointer;
  font-size: 14px;
  justify-content: center;
  text-align: left;
  vertical-align: middle;
  background-color: #f5f8fa;
  background-image: linear-gradient(180deg,hsla(0,0%,100%,.8),hsla(0,0%,100%,0));
  box-shadow: inset 0 0 0 1px rgba(16,22,26,.2), inset 0 -1px 0 rgba(16,22,26,.1);
  color: #182026;
  border-radius: 3px;
  height: 30px;
  padding: 0 25px 0 10px;
  width: 100%;
  -moz-appearance: none;
  -webkit-appearance: none;
  appearance: none; // not widely adopted yet
}

.label {
  display: block;
  margin-bottom: 15px;
  margin-top: 0;
}

.label>div {
  display: block;
  margin-top: 5px;
  text-transform: none;
}

.object-display > div, .array-display > div {
  margin-left: 25px;
}

.enum-display {
  color: #FF7373;
}

.boolean-display {
  color: #48AFF0;
}

.string-display {
  color: #3DCC91;
}

.number-display {
  color: #AD99FF;
}

.kv-display, .array-display > div {
  margin-top: 2px;
  margin-bottom: 2px;
}

.missing {
  border: 1px solid red;
}
