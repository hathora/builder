<html>
  <head>
    <link rel="stylesheet" type="text/css" href="./styles.css" />
  </head>

  <body>
    <div class="container" id="app">
      <div class="forms-container" id="forms">
        {{#each methods}}
        {{#if this}}
        <method-form method="{{@key}}">
          {{> renderForm (getArgsInfo this) arg=@key}}
        </method-form>
        {{else}}
        <method-form method="{{@key}}"></method-form>
        {{/if}}
        {{/each}}
      </div>
      <div class="json-state">
        <pre id="state"></pre>
      </div>
    </div>
    <script src="./app.ts"></script>
  </body>
</html>
{{#*inline "renderForm"}}
{{#if (eq type "object")}}
<object-input{{#if arg}} arg="{{arg}}"{{/if}}>
  {{#each properties}}
  <label>{{@key}}</label>
  {{> renderForm arg=@key}}
  {{/each}}
</object-input>
{{else if (eq type "array")}}
<array-input{{#if arg}} arg="{{arg}}"{{/if}}>
  {{#with items}}
  {{> renderForm}}
  {{/with}}
</array-input>
{{else if (eq type "enum")}}
<enum-input{{#if arg}} arg="{{arg}}"{{/if}} :options='{{{stringify options}}}'></enum-input>
{{else if (eq type "string")}}
<string-input{{#if arg}} arg="{{arg}}"{{/if}}></string-input>
{{else if (eq type "number")}}
<number-input{{#if arg}} arg="{{arg}}"{{/if}}></number-input>
{{else if (eq type "boolean")}}
<boolean-input{{#if arg}} arg="{{arg}}"{{/if}}></boolean-input>
{{/if}}
{{/inline}}
